<div class="container mt-5">
	<h1>Submit an Article</h1>
	<form id="submit-form" enctype="multipart/form-data">
		<div class="mb-3">
			<label for="formTitle" class="form-label">Title</label>
			<input type="text" class="form-control" id="formTitle" name="title" required>
			<div class="invalid-feedback">
				Please enter a title.
			</div>
		</div>
		<div class="mb-3">
			<label for="image" class="form-label">Upload an Image</label>
			<input type="file" class="form-control" id="image" name="image" accept="image/*" required>
			<div class="invalid-feedback">
				Please upload an image.
			</div>
		</div>
		<div class="mb-3">
			<label for="shortDescription" class="form-label">Short Description</label>
			<textarea class="form-control" id="shortDescription" name="shortDescription" rows="2" required></textarea>
			<div class="invalid-feedback">
				Please enter a short description.
			</div>
		</div>
		<div id="editor-container"></div>
		<input type="hidden" id="content" name="content" required>
		<div class="mb-3">
			<label for="humanCheck" class="form-label" id="humanCheckLabel"></label>
			<input type="number" class="form-control" id="humanCheck" name="humanCheck" required>
			<div class="invalid-feedback">
				Please verify you are a human by answering correctly.
			</div>
		</div>
		<input type="hidden" id="humanCheckAnswer" name="humanCheckAnswer">
		<button type="submit" class="btn btn-primary mb-3">Submit</button>
	</form>
	<div id="waiting-icon" class="waiting-icon" style="display: none;">
		<img src="path/to/your/waiting-icon.gif" alt="Waiting...">
	</div>
</div>

<script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>
